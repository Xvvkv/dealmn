<!DOCTYPE html>
<html>
  <head>
    <title>Dealmn</title>
    <script>window.I18n = <%= current_translations.to_json.html_safe %></script>
    
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="header_top">
      <div class="container">
        <div class="header_top_stat">
          <%= t('view.header.top_stat', {listing_total: 10, listing_today: 5}).html_safe %>
        </div>
        <div class="header_top_menu">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
              </li>
            <% else %>
              <li>
              <%= link_to('Login', new_user_session_path)  %>  
              </li>
            <% end %>
            <li>
              <%= link_to t('view.header.about_us'), '#' %>
            </li>
            <li>
              <%= link_to t('view.header.terms_of_use'), '#' %>
            </li>
            <li class="header_top_menu_last">
              <%= link_to tag(:span, class: ["glyphicon","glyphicon-question-sign"]), '#', style: "font-size:14px;" %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="header_mid">
      <div class="container">
        <a href="/"><div class="logo"></div></a>
        <div class="logo-right-category"> 
          <% unless (controller.controller_name == "home" && controller.action_name == "index") %>
          <div class='hover'>
            <a href="#">Ангилал <span class="caret"></span></a>
            <div class="tooltip" style="width:250px">
              <%= react_component("CategoryMenu", url: "/rest/categories.json") %>
            </div>
          </div>
          <% end %>
        </div>
        
        <%= react_component("SearchBar", url: "/rest/categories.json?exclude_children=true") %>
        
        <div class="header-profile">
          <div class="header-profile-img"><%= image_tag('profile_sample.png')%></div>
          <div class="header-profile-info">
            <div class="header-profile-name">        
              <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                  Батбаатар Болдбаатар <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                  <li><a href="#">Action</a></li>
                  <li><a href="#">Another action</a></li>
                  <li><a href="#">Something else here</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Separated link</a></li>
                </ul>
              </div>
            </div>
            <div class="header-profile-notification">
              <div class="header-profile-chat"><%= image_tag('header-chat-icon.png')%> 1</div>
              <div class="header-profile-all-deals"><%= image_tag('deals-icon.png')%> 5</div>
              <div class="header-profile-all-deals"><%= image_tag('check.png')%> 5</div>
            </div>
          </div>
        </div>
      </div>    
    </div>

    <div class="clearfix"></div>

    <%= yield %>

    <div class="footer">

        <div class="container">

            <div class="links">
                <a href="#">Нүүр</a>
                <a href="#">Бидний тухай</a>
                <a href="#">Үйлчилгээний нөхцөл</a>
                <a href="#">Тусламж</a>
                <a href="#">Сурталчилгаа байршуулах</a>
                <a href="#">Сайтын бүтэц</a>
                <a href="#">Холбоо барих</a>
            </div>
            <div class="footer-tm">

                ©2015 Deal.mn. All rights reserved.

            </div>

        </div>

    </div>

    <script>

    $(window).load(function(){
      $(".header_mid").sticky({ topSpacing: 0, className: 'header-sticked' });
    });

    </script> 


  </body>
</html>
