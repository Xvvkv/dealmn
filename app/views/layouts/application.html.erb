<!DOCTYPE html>
<html>
  <head>
    <title>Dealmn</title>
    <script>window.I18n = <%= current_translations.to_json.html_safe %></script>
    
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="header_top">
      <div class="container">
        <div class="header_top_stat">
          <%= t('view.header.top_stat', {listing_total: 10, listing_today: 5}).html_safe %>
        </div>
        <div class="header_top_menu">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to t('view.header.about_us'), '#' %>
            </li>
            <li>
              <%= link_to t('view.header.terms_of_use'), '#' %>
            </li>
            <li class="header_top_menu_last">
              <%= link_to tag(:span, class: ["glyphicon","glyphicon-question-sign"]), '#', style: "font-size:14px;" %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="header_mid">
      <div class="container">
        <a href="/"><div class="logo"></div></a>
        <div class="logo-right-category"> 
          <% unless (controller.controller_name == "home" && controller.action_name == "index") %>
          <div class='hover'>
            <a href="#">Ангилал <span class="caret"></span></a>
            <div class="tooltip" style="width:250px">
              <%= react_component("CategoryMenu", url: "/rest/categories.json") %>
            </div>
          </div>
          <% end %>
        </div>
        
        <%= react_component("SearchBar", url: "/rest/categories.json?exclude_children=true") %>
        
        <div class="header-profile">

          <% if false %> 

            <div class="header-login">
            <div class="header-login-social-media">
              <a href="#"><%= image_tag('fb-login.png')%></a>
              <a href="#"><%= image_tag('tw-login.png')%></a>
              <a href="#"><%= image_tag('gp-login.png')%></a>
            </div>
            <div class="header-profile-info">   
                  <a href="/users/sign_in"><div class="btn btn-default">Нэвтрэх</div></a>
            </div>
            </div>
        
          <% end %>

        <div class="header-profile-logged">
          <div class="header-profile-notifications">
            <a href="#"><div class="header-notification"><span class="glyphicon glyphicon-ok-circle"></span></div></a>
            <a href="#"><div class="header-notification"><span class="glyphicon glyphicon-envelope"></span></div></a>
            <a href="#">
