<div class="main">

  <div class="container">

    <div class="sign-up-page">


      <div class="sign-up-page-title"><%= t('view.registration.register')%></div>
      <% if resource.errors.full_messages.count > 0 %>
        <div class="alert alert-warning">
          <ul>
            <%= raw resource.errors.full_messages.map { |msg| content_tag(:li, msg) }.join %>
          </ul>
        </div>
      <% end %>
        
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

        <div  class="sign-up-page-input"><%= f.label :email %>
        <%= f.email_field :email, :autofocus => true %></div>

        <div  class="sign-up-page-input"><%= f.label :first_name %>
        <%= f.text_field :first_name %></div>

        <div  class="sign-up-page-input"><%= f.label :last_name %>
        <%= f.text_field :last_name %></div>

        <div  class="sign-up-page-input"><%= f.label :password %>
        <%= f.password_field :password %></div>

        <div  class="sign-up-page-input"><%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %></div>

        <div  class="sign-up-page-button"><%= f.submit t('view.registration.register') %></div>
      <% end %>

      <div class="sign-up-page-links"><%= render "devise/shared/links" %></div>

    </div>

  </div>

</div>
