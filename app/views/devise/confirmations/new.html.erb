<div class="main">

	<div class="container">

		<div class="login-page">

			<div class="login-page-title comfirm-page">Баталгаажуулах И-Мэйл дахин илгээх</div>
      <% if resource.errors.full_messages.count > 0 %>
        <div class="alert alert-warning">
          <ul>
            <%= raw resource.errors.full_messages.map { |msg| content_tag(:li, msg) }.join %>
          </ul>
        </div>
      <% end %>

      <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
        
        <div class="login-page-input"><%= f.label :email %>
        <%= f.email_field :email, :autofocus => true %></div>

        <div class="login-page-button"><%= f.submit "Илгээх" %></div>
      <% end %>

      <%= render "devise/shared/links" %>

		</div>

	</div>

</div>
