<div class="main">

	<div class="container">

		<div class="login-page">

			<div class="login-page-title"><%= t('view.login.login') %></div>

			<% if flash[:alert] %>
          <p class="error-msg"><%= flash[:alert] %></p>
      <% end %>

			<div class="login-page-other-acc-use">

				<a href="/auth/facebook" style="margin-right:5px;"><%= image_tag('login-with-fb.jpg')%></a><a href="/auth/twitter" style="margin-right:5px;"><%= image_tag('login-with-tw.jpg')%></a><a href="/auth/google_oauth2"><%= image_tag('login-with-gp.jpg')%></a>

			</div>

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div class="login-page-input">
			  	<%= f.email_field :email, :autofocus => true, :placeholder => t('view.login.email_placeholder') %>
			  </div>

			  <div  class="login-page-input">
			 	<%= f.password_field :password, :placeholder => t('view.login.password_placeholder') %>
			  </div>


			  <% if devise_mapping.rememberable? -%>
			    <div class="login-page-remind-me"><%= f.check_box :remember_me %> <%= f.label t('view.login.remember_me') %></div>
			  <% end -%>

			  <div class="login-page-button"><%= f.submit t('view.login.login') %></div>
			<% end %>

			<div class="login-page-links"><%= render "devise/shared/links" %></div>

		</div>

	</div>

</div>

